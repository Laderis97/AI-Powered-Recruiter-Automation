      } catch (error) {
        console.error('Error unarchiving job:', error);
        showError('archivedJobsList', 'Network error occurred');
      }
    }

    async function unarchiveCampaign(campaignId) {
      try {
        const response = await fetch(`/api/campaigns/${campaignId}/unarchive`, {
          method: 'POST'
        });

        if (response.ok) {
          showSuccess('archivedCampaignsList', 'Campaign unarchived successfully!');
