        } else {
          const error = await response.json();
          showError('archivedCampaignsList', error.error || 'Failed to unarchive campaign');
        }
      } catch (error) {
        console.error('Error unarchiving campaign:', error);
        showError('archivedCampaignsList', 'Network error occurred');
      }
    }

    // Delete functions for permanently removing archived items
    async function deleteCandidate(candidateId) {
      if (!confirm('Are you sure you want to permanently delete this candidate? This action cannot be undone.')) {
        return;
      }

      try {
        const response = await fetch(`/api/candidates/${candidateId}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          showSuccess('archivedCandidatesList', 'Candidate permanently deleted!');
          loadArchivedCandidates();
          updateStats();
        } else {
          const error = await response.json();
          showError('archivedCandidatesList', error.error || 'Failed to delete candidate');
        }
      } catch (error) {
        console.error('Error deleting candidate:', error);
        showError('archivedCandidatesList', 'Network error occurred');
      }
